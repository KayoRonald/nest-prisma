datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

model Users {
  id    String @id @default(uuid())
  name  String
  email String @unique

  Courses   Courses? @relation(fields: [coursesId], references: [id])
  coursesId String?

  created_at DateTime @default(now())
  update_at  DateTime @updatedAt
  @@map("users")
}

model Courses {
  id    String  @id @default(uuid())
  name  String
  users Users[]

  @@map("courses")
}

model Speakers {
  id          String @id @default(uuid())
  photo       String
  name        String
  occupation  String
  description String
  instagram   String
  linkedin    String

  created_at DateTime @default(now())
  update_at  DateTime @updatedAt

  @@map("speakers")
}
